<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Report Page</title>
    <%- include('../layouts/header.ejs'); %>
    <link rel="stylesheet" href="../../css/Report%20Page%20Stylesheet.css">
    <script src=../../js/Responsive.js></script>
    <script src="../../js/Sidebar.js"></script>
</head>
<body class="bg-color">
<div class="Logo">
    <img src= ../../Assets/Logo.png alt="Logo" class="responsive">
</div>
<%- include('../layouts/navbar.ejs', {type: 'V1'}); %>

<div class="container">
    <form>
        <div class="row">
                <label>Stock Name</label>
                <input type="text" name="stockid" placeholder="Stock ID" style="margin-right: 20px; width: 25%">
                <input type="text" name="stockname" placeholder="Stock Name" style="margin-right: 20px; width: 35% ">
                <input type="text" name="stockqty" placeholder="Qty" style="margin-right: 20px; width: 10%">
                <img src="../../Assets/GSIcon.png" style="width: 5%">
            </div>
        <div class="row">
            <label>Period Date</label>
            <input type="date" name="pddate" placeholder="Date" style="margin-right: 20px; width: 25%">
        </div>
        <div class="row">
        <label>Assigned To</label>
        <input type="Text" name="pid" placeholder="Person ID" style="margin-right: 20px; width: 25%">
            <input type="Text" name="pname" placeholder="Person Name" style="margin-right: 20px; width: 35%">
            <img src="../../Assets/GSIcon.png" style="width: 5%">
        </div>
        <div class="row">
            <label>Required Qty</label>
            <input type="number" name="qty" placeholder="Qty" style="margin-right: 20px; width: 10%">
        </div>
        <div class="row">
            <input type="submit" value="Save" style="margin-top: 50px">
        </div>
    </form>
</div>
<%- include('../layouts/footer.ejs'); %>
</body>
</html>
